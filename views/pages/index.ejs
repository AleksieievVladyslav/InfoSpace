<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/header.ejs')%>
</head>
<body>
    <div class="container">
        <div class="login-page">
            <div class="form">
                <form class="register-form">
                    <h3>REGISTRATION</h3>
                    <input type="text" placeholder="name" id="name-reg"/>
                    <input type="password" placeholder="password" id="pass-reg"/>
                    <button id="reg">create</button>
                    <p class="message">Already registered? <a href="#">Sign In</a></p>
                </form>
                <form class="login-form">
                    <h3>LOGIN</h3>
                    <input type="text" placeholder="username" id="name-log"/>
                    <input type="password" placeholder="password" id="pass-log"/>
                    <button id="log">login</button>
                    <p class="message">Not registered? <a href="#">Create an account</a></p>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="js/common.js"></script>
</body>
</html>